{
  "version": "1.0.0",
  "description": "Centralized configuration for SSi Course Production automation",

  "phase3_lego_extraction": {
    "parallelization": {
      "small_course_threshold": 20,
      "medium_course_threshold": 100,

      "small_course_strategy": {
        "description": "For courses with ≤20 seeds",
        "segment_count": 2,
        "agents_per_segment": 2,
        "seeds_per_agent": "calculated (segment_size / agents_per_segment)"
      },

      "medium_course_strategy": {
        "description": "For courses with 21-100 seeds",
        "segment_count": 1,
        "agents_per_segment": 10,
        "seeds_per_agent": 10
      },

      "large_course_strategy": {
        "description": "For courses with >100 seeds",
        "seeds_per_segment": 100,
        "agents_per_segment": 10,
        "seeds_per_agent": 10
      }
    },

    "browser_sessions": {
      "max_concurrent_browsers": 10,
      "browser_spawn_delay_ms": 5000,
      "browser_timeout_ms": 300000,
      "headless": false
    },

    "collision_handling": {
      "auto_inject_avoidance_instructions": true,
      "collision_manifest_path": "phase3_collision_reextraction_manifest.json",
      "fcfs_rule": "keep_first_occurrence"
    },

    "validation": {
      "run_fd_check_after_merge": true,
      "run_deduplication": true,
      "block_on_collision": true
    }
  },

  "phase3_basket_generation": {
    "browsers": 5,
    "agents_per_browser": 5,
    "seeds_per_agent": 3,
    "browser_spawn_delay_ms": 8000
  },

  "phase5_basket_generation": {
    "parallelization": {
      "small_course_threshold": 50,
      "medium_course_threshold": 200,

      "small_course_strategy": {
        "description": "For courses with ≤50 LEGOs",
        "agents": 2,
        "legos_per_agent": "calculated (total_legos / agents)"
      },

      "medium_course_strategy": {
        "description": "For courses with 51-200 LEGOs",
        "agents": 5,
        "legos_per_agent": "calculated (total_legos / agents)"
      },

      "large_course_strategy": {
        "description": "For courses with >200 LEGOs",
        "agents": 10,
        "legos_per_agent": "calculated (total_legos / agents)"
      }
    },

    "browser_sessions": {
      "max_concurrent_browsers": 10,
      "browser_spawn_delay_ms": 5000,
      "browser_timeout_ms": 300000,
      "headless": false
    },

    "practice_generation": {
      "target_phrases_per_lego": 10,
      "overlap_strategies": ["none", "light", "medium", "heavy"],
      "default_overlap": "none"
    }
  },

  "orchestrator": {
    "checkpoint_modes": {
      "available": ["manual", "gated", "full"],
      "default": "gated",
      "description": {
        "manual": "Wait for user approval at every phase",
        "gated": "Auto-proceed if validation passes, wait if fails",
        "full": "Auto-proceed through entire pipeline (CI/CD mode)"
      }
    },

    "validation_gates": {
      "phase1": ["seed_fd_check"],
      "phase2": [],
      "phase3": ["lego_fd_check", "infinitive_form_check"],
      "phase5": [],
      "phase6": [],
      "phase8": []
    },

    "notification": {
      "slack_webhook_url": null,
      "email_notifications": false,
      "console_only": true
    }
  },

  "paths": {
    "vfs_root": "public/vfs/courses",
    "scripts_root": "scripts",
    "services_root": "services",
    "validation_scripts": "scripts/validation"
  },

  "ports": {
    "orchestrator": 3456,
    "phase1_translation": 3457,
    "phase3_lego_extraction": 3458,
    "phase5_basket_generation": 3459,
    "phase6_seed_instructions": 3460,
    "phase8_audio_generation": 3461
  },

  "performance": {
    "agent_spawn_delay_ms": 3000,
    "max_retries": 3,
    "retry_backoff_ms": 5000,
    "memory_limit_mb": 4096
  },

  "development": {
    "verbose_logging": true,
    "save_intermediate_outputs": true,
    "mock_claude_api": false,
    "test_mode": false
  }
}
